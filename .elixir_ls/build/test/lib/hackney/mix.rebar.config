{erl_opts,[debug_info,
           {platform_define,"R14",no_callback_support},
           {platform_define,"^[0-9]+",namespaced_types},
           {platform_define,"^R",no_proxy_sni_support}]}.
{xref_checks,[undefined_function_calls]}.
{cover_enabled,true}.
{eunit_opts,[verbose]}.
{post_hooks,[{clean,"rm -rf *~ */*~ */*.xfm test/*.beam"}]}.
{deps,[{idna,"5.1.1"},
       {mimerl,"1.0.2"},
       {certifi,"2.3.1"},
       {metrics,"1.0.1"},
       {ssl_verify_fun,"1.1.1"}]}.
{profiles,
    [{docs,
         [{deps,
              [{edown,
                   {git,"https://github.com/uwiger/edown.git",{tag,"0.8"}}}]},
          {edoc_opts,
              [{doclet,edown_doclet},
               {packages,false},
               {subpackages,true},
               {top_level_readme,
                   {"./README.md","http://github.com/benoitc/hackney"}}]}]},
     {test,[{deps,[{cowboy,"1.0.4"},{jsone,"1.4.3"}]}]}]}.
{dialyzer,[{warnings,[race_conditions,no_return,unmatched_returns,
                      error_handling]},
           {plt_apps,top_level_deps},
           {plt_extra_apps,[]},
           {plt_location,local},
           {plt_prefix,"hackney"},
           {base_plt_location,"."},
           {base_plt_prefix,"hackney"}]}.
{overrides,[]}.
